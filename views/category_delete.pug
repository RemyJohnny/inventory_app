extends layout

block content
        div
            h1(class="text-3xl") #{title}:  #{category.name}
            p #{category.desc}
        if item_list.length 
            
            div(class="mt-8")
                p #[strong Delete the following items before attempting to delete this category.]
                h1(class="text-2xl") #[strong Items] 
                dl 
                each item in item_list 
                    dt 
                        h1(class="font-extrabold text-blue-600") #[a(href=item.url) * #{item.name}] 
                    dd #{item.desc} 
                    
        else
            div(class="flex justify-center items-center flex-col gap-6")
                p do you really want to Delete this category ?
                form(method="POST") 
                    .form_group
                        input(type="hidden", name="categoryId" value=category._id)
                    button.btn(type="submit") Delete  